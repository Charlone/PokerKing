<div class="game-play">
    <div class="game-play-section">
        <div class="current-balance-box text-center"></div>

        <div class="opponent">
            <div class="opponent-name text-center">Poker King</div>
            <div class="opponent-cards">
                {% for i in range(1,5) %}
                <img class="opponent-card-{{ i }}" data-value="" src="{{ asset('build/images/cards/red_back.png') }}" alt="opponent card">
                {% endfor %}
            </div>
        </div>

        <div class="player">
            <div class="player-name text-center mt-2">{{ app.user.username }}</div>
            <div class="player-cards">
                {% for i in range(1,5) %}
                <img class="player-card-{{ i }}" data-value="" src="{{ asset('build/images/cards/red_back.png') }}" alt="player card">
                {% endfor %}
            </div>
        </div>

        <div class="bet-amount-box">
            <button class="btn btn-dark btn-lg fold-button">Fold</button>
            <a class="bet-100" data-bet-amount="100" href="#">
                <img src="{{ asset('build/images/components/100_chip.png') }}" alt="bet 100">
            </a>
            <a class="bet-200" data-bet-amount="200" href="#">
                <img src="{{ asset('build/images/components/200_chip.png') }}" alt="bet 200">
            </a>
            <a class="bet-500" data-bet-amount="500" href="#">
                <img src="{{ asset('build/images/components/500_chip.png') }}" alt="bet 500">
            </a>
        </div>

    </div>
</div>